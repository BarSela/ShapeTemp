        <!-- Right Column -->
        <div class="w3-twothird" id="right-edit">
          <div class="w3-container w3-card w3-white w3-margin-bottom">
            <h2 class="w3-text-grey w3-padding-16">
              
            </h2>
            <div class="w3-container">
              <div class="w3-card-4">
                <div class="w3-container w3-teal">
                  <h2>Edit profile</h2>
                </div>
                <form class="w3-container" >
                  <label class="w3-text-grey" id="general"><b>General</b></label>
                  <p>      
                  <label class="w3-text-teal" id="businassName"><b>Business Name</b></label>
                  <input class="w3-input w3-border w3-light-grey w3-round-xlarge" id="businassName-Input" name="BusinessName" type="text" required></p>
                  <p>      
                  <label class="w3-text-teal"><b>Full Name</b></label>
                  <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="fullName-Input" name="fullName" type="text" required></p>
                  <p>      
                    <label class="w3-text-teal" ><b>Specialty</br></label>
                      <select class="w3-input w3-border w3-light-grey w3-round-xlarge" id="specialty-Input" name="specialty">
                        <option value="personal">Personal Trainer</option>
                        <option value="athletics">Athletics</option>
                        <option value="gymnastics">Gymnastics</option>
                        <option value="aerobic">Aerobic</option>
                        <option value="gym">Gym</option>
                        <option value="cross-fit">Cross-fit</option>
                        <option value="mental-wellness">Mental-wellness</option>
                        <option value="feldenkrais">Feldenkrais</option>
                        
                        
                      </select>     
                      <label class="w3-text-teal"><b>City</b></label>
                      <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="city-Input" name="City" type="text" required></p>
                      <p>      
                        <label class="w3-text-teal"><b>Phone</b></label>
                        <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="phone-Input" name="Phone" type="text" required></p>
                        <p>      
                          <label class="w3-text-teal"><b>Email</b></label>
                          <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="email-Input" name="Email" type="text" required ></p>
                          <p>      
                            <label class="w3-text-teal"><b>About Section (Description)</b></label>
                            <span class="w3-input w3-border w3-light-grey w3-round-xlarge"" role="textbox"  id="about-Input" name="Description" type="text" required contenteditable></p>
                              <hr />
                              <label class="w3-text-grey" id="languages"><b>Languages</b></label>
                              <label class="w3-text-grey"><br>Select the level of language proficiency</br></label>
                              <label class="w3-text-teal"><b>Hebrew</br></label>
                                <div class="form-element">
                                  <input class="slider" id="hebrew-edit" type="range" min="0" max="100" step="10" >
                                  <label class="w3-text-grey" id="hebp">0</label>
                                  <label class="w3-text-grey" id="present">%</label>
                                  <input class="slider" id="english-edit" type="range" min="0" max="100" step="10" >
                                  <label class="w3-text-grey" id="enbp">0</label>
                                  <label class="w3-text-grey" id="present">%</label>
                                  <input class="slider" id="russian-edit" type="range" min="0" max="100" step="10" >
                                  <label class="w3-text-grey" id="rubp">0</label>
                                  <label class="w3-text-grey" id="present">%</label>
                                  <input class="slider" id="spanish-edit" type="range" min="0" max="100" step="10" >
                                  <label class="w3-text-grey" id="spbp">0</label>
                                  <label class="w3-text-grey" id="present">%</label>
                                  <input class="slider" id="arabic-edit" type="range" min="0" max="100" step="10" >
                                  <label class="w3-text-grey" id="arbp">0</label>
                                  <label class="w3-text-grey" id="present">%</label>
                                </div>
                                <hr />
                                <label class="w3-text-grey" id="languages"><b>Certification</b></label>
                              <label class="w3-text-grey"><br>Please fill in where you were certified as a Trainer and when</br></label>
                              <label class="w3-text-teal"><b>Shcool Name</b></label>
                              <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="schoolName-Input" name="schoolName" type="text" required></p>
                              <label class="w3-text-teal"><b>Year</b></label>
                              <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="cert-date-Input" name="year" type="date" required></p>
                              <label class="w3-text-teal"><b>Certification info</b></label>
                              <input class="w3-input w3-border w3-light-grey w3-round-xlarge"" id="cert-info-Input" name="year" type="text" required></p>

                              
                    <p>
                  <button class="w3-btn w3-teal w3-round-xlarge"">Save Changes</button></p>
                </form>
